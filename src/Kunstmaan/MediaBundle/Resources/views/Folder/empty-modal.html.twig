<div id="empty-modal" class="modal fade">
    <div class="modal-dialog">
        <div class="modal-content">

            <!-- Head -->
            <div class="modal-header">
                <button class="close" data-dismiss="modal">
                    <i class="fa fa-times"></i>
                </button>
                <h3>
                    {#{{ 'media.folder.delete.modal.title'| trans({'%folder%': folder.name }) | raw }}#}
                    Empty folder
                </h3>
            </div>

            <!-- Body -->
            <div class="modal-body">
                <p>
                    {#{{ 'media.folder.delete.modal.text'| trans({'%folder%': folder.name }) | raw }}#}
                    Would you like to delete all items in this folder?
                </p>
            </div>

            <!-- Footer -->
            <div class="modal-footer">
                <a href="{{ path('KunstmaanMediaBundle_folder_empty', { 'folderId' : folder.id , 'type' : type }) }}" class="js-add-app-loading btn btn-danger btn--raise-on-hover">
                    Empty
                </a>
                <button type="button" class="btn btn-default btn--raise-on-hover" data-dismiss="modal">
                    {{ 'form.cancel' |trans }}
                </button>
            </div>
        </div>
    </div>
</div>
